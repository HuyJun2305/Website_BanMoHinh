@model View.ViewModel.ProductViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Thêm sản phẩm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="productForm" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdBrand" class="control-label"></label>
                <select asp-for="IdBrand" class="form-control">
                    <option value="">Chọn thương hiệu</option>
                    @foreach (var brand in (IEnumerable<SelectListItem>)ViewData["IdBrand"])
                    {
                        <option value="@brand.Value">@brand.Text</option>
                    }
                </select>
                <span asp-validation-for="IdBrand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdMaterial" class="control-label"></label>
                <select asp-for="IdMaterial" class="form-control">
                    <option value="">Chọn chất liệu</option>
                    @foreach (var material in (IEnumerable<SelectListItem>)ViewData["IdMaterial"])
                    {
                        <option value="@material.Value">@material.Text</option>
                    }
                </select>
                <span asp-validation-for="IdMaterial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPromotion" class="control-label"></label>
                <input asp-for="IdPromotion" class="form-control" />
                @*<select asp-for="IdPromotion" class="form-control">
                    <option value="">Chọn loại giảm giá</option>
                    @foreach (var promotion in (IEnumerable<SelectListItem>)ViewData["IdPromotion"])
                    {
                        <option value="@promotion.Value">@promotion.Text</option>
                    }
                </select>*@
                <span asp-validation-for="IdPromotion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdSize" class="control-label"></label>
                <select asp-for="IdSize" class="form-control">
                    <option value="">Chọn size</option>
                    @foreach (var size in (IEnumerable<SelectListItem>)ViewData["IdSize"])
                    {
                        <option value="@size.Value">@size.Text</option>
                    }
                </select>
                <span asp-validation-for="IdSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
