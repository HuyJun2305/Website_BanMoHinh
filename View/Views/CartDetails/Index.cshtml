@model View.ViewModels.CartDetailsViewModel

@{
    ViewData["Title"] = "Danh Sách Sản Phẩm";
    Layout = "_LayoutCustomer";
}
@{
    var message = ViewBag.Message as string;
    var totalPrice = Model.CartDetails.Sum(item => item.Product.Price * item.Quatity);

}

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-warning">
        @message
    </div>
}



<!-- breadcrumb -->
<div class="container">
	<div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
		<a href="index.html" class="stext-109 cl8 hov-cl1 trans-04">
			Home
			<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
		</a>

		<span class="stext-109 cl4">
			Shoping Cart
		</span>
	</div>
</div>


<!-- Shoping Cart -->
<form class="bg0 p-t-75 p-b-85">
	<div class="container">
		<div class="row">
			<div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
				<div class="m-l-25 m-r--38 m-lr-0-xl">
					<div class="wrap-table-shopping-cart">
						<table class="table-shopping-cart">
							<tr class="table_head">
								<th class="column-6">
									<!-- Checkbox chọn tất cả -->
									<input type="checkbox" id="select-all" onclick="toggleSelectAll(this)" />
								</th>
								<th class="column-1">Product</th>
								<th class="column-2"></th>
								<th class="column-3">Price</th>
								<th class="column-4">Quantity</th>
								<th class="column-5">Total</th>
							</tr>
							@foreach(var item in Model.CartDetails)
							{
								<tr class="table_row">
									<td class="column-6">
										<input type="checkbox"
											   class="select-item"
											   value="@item.ProductId"
											   data-product-name="@item.Product.Name"
											   data-product-price="@item.Product.Price"
											   data-quantity="@item.Quatity"
											   data-total-price="@item.TotalPrice" />
									</td>

									<td class="column-1">
									<!-- Carousel for Images -->
                                <div id="carousel-@item.Id" class="carousel slide" data-bs-ride="carousel">
                                    <div class="carousel-inner">
                                        @foreach (var image in Model.Images.Where(i => i.ProductId == item.ProductId).Select((value, index) => new { value, index }))
                                        {
                                            <div class="carousel-item @(image.index == 0 ? "active" : "")">
											<img src="@Url.Content(image.value.URL)" style="width:100px; height:auto;" alt="Product Image">
                                            </div>
                                        }
                                    </div>
                                </div>
								</td>
									<td class="column-2">@item.Product.Name</td>
									<td class="column-3">@item.Product.Price.ToString("#,0₫", new System.Globalization.CultureInfo("vi-VN"))</td>
									<td class="column-4">
									    <div class="wrap-num-product flex-w m-l-auto m-r-0">
									        <!-- Nút giảm số lượng -->
									        <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m" onclick="updateCartDetail()">
									            <i class="fs-16 zmdi zmdi-minus"></i>
									        </div>
									
									        <!-- Ô nhập số lượng -->
											<input class="mtext-104 cl3 txt-center num-product"
												   type="number"
												   name="num-product1"
												   id="quantity-@item.ProductId"
												   value="@item.Quatity"
												   min="0"
												   onchange="updateCartDetail('@item.ProductId')">

											<!-- Nút tăng số lượng -->
									        <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m" onclick="updateCartDetail()">
									            <i class="fs-16 zmdi zmdi-plus"></i>
									        </div>
									    </div>
									</td>

									<td class="column-5">@item.TotalPrice.ToString("#,0₫", new System.Globalization.CultureInfo("vi-VN"))</td>

								</tr>
							}
							

							
						</table>
					</div>

					<div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
						<div class="flex-w flex-m m-r-20 m-tb-5">
							<input class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" type="text" name="coupon" placeholder="Coupon Code">

							<div class="flex-c-m stext-101 cl2 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5">
								Apply coupon
							</div>
						</div>

						<div class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
							Update Cart
						</div>
					</div>
				</div>
			</div>

			<div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
				<div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
					<h4 class="mtext-109 cl2 p-b-30">
						Cart Totals
					</h4>

					<div class="flex-w flex-t bor12 p-b-13">
						<div class="size-208">
							<span class="stext-110 cl2">
								Subtotal:
							</span>
						</div>

						<div class="size-209">
							<span class="mtext-110 cl2">
								$79.65
							</span>
						</div>
					</div>

					<div class="flex-w flex-t bor12 p-t-15 p-b-30">
						<div class="size-208 w-full-ssm">
							<span class="stext-110 cl2">
								Shipping:
							</span>
						</div>

						<div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
							<p class="stext-111 cl6 p-t-2">
								Đơn vị giao hàng toàn quốc. Thời gian giao hàng có thể mất khá lâu tầm 1 đến 2 tuần.
							</p>

							<div class="p-t-15">
								<span class="stext-112 cl8">
									Calculate Shipping
								</span>

								<div class="rs1-select2 rs2-select2 bor8 bg0 m-b-12 m-t-9">
									<select id="city" class="form-control js-select2" name="time">
										<option value="" selected>Chọn tỉnh thành</option>
									</select>
									<div class="dropDownSelect2"></div>
								</div>

								<div class="bor8 bg0 m-b-12">
									<select id="district" class="form-control js-select2">
										<option value="" selected>Chọn quận huyện</option>
									</select>
								</div>

								<div class="bor8 bg0 m-b-22">
									<select id="ward" class="form-control js-select2">
										<option value="" selected>Chọn phường xã</option>
									</select>
								</div>
								<div class="bor8 bg0 m-b-22">
									<textarea id="detail" placeholder="Địa chỉ chi tiết" class="form-control js-select2"></textarea>
								</div>

								<div class="flex-w">
									<div class="flex-c-m stext-101 cl2 size-115 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer">
										Update Totals
									</div>
								</div>

							</div>
						</div>
					</div>

					<div class="flex-w flex-t p-t-27 p-b-33">
						<div class="size-208">
							<span class="mtext-101 cl2">
								Total: 
							</span>
						</div>

						<div class="size-209 p-t-1">
							<span class="mtext-110 cl2">
								@totalPrice.ToString("#,0₫", new System.Globalization.CultureInfo("vi-VN"));
							</span>
						</div>
					</div>

					<button id="checkoutButton" class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
						Proceed to Checkout
					</button>
				</div>
			</div>
		</div>
	</div>
</form>

@section Scripts{

	<script>
		// Cập nhật giỏ hàng khi thay đổi số lượng hoặc checkbox
		function updateCartDetail(productId) {
			// Lấy giá trị số lượng từ input
			var quantity = document.getElementById('quantity-' + productId).value;

			// Lấy giá trị cartId và productId từ các thuộc tính của sản phẩm
			var cartId = '@Model.CartId'; // Bạn có thể lấy giá trị này từ session hoặc một biến toàn cục khác
			var checkbox = document.querySelector('input[value="' + productId + '"].select-item');
			var isChecked = checkbox.checked;

			// Gọi API để cập nhật giỏ hàng
			var apiUrl = `https://localhost:7280/api/CartDetail/Update?cartId=${cartId}&productId=${productId}&quantity=${quantity}`;

			// Gửi yêu cầu PUT hoặc POST đến API để cập nhật giỏ hàng
			fetch(apiUrl, {
				method: 'POST', // Hoặc 'PUT' nếu cần thiết
				headers: {
					'Content-Type': 'application/json'
				},
				body: JSON.stringify({
					productId: productId,
					quantity: quantity,
					isChecked: isChecked
				})
			})
				.then(response => response.json())
				.then(data => {
					// Xử lý kết quả trả về từ server (nếu cần thiết)
					console.log('Giỏ hàng đã được cập nhật', data);
				})
				.catch(error => {
					console.error('Có lỗi xảy ra khi cập nhật giỏ hàng:', error);
				});
		}

	</script>
	<!--Check out-->
	<script>
		$(document).ready(function () {
			$('#checkoutButton').click(function () {
				// Get the cartId from the session or pass it dynamically
				var cartId = '@Model.CartId'; // You can dynamically fetch this if needed

				// Make the API call to Checkout
				$.ajax({
					url: `https://localhost:7280/api/CartDetail/CheckOut?cartId=${cartId}`, // The API URL
					type: 'POST',  // Assuming POST, change if necessary
					success: function (response) {
						// Handle success (e.g., redirect to a confirmation page or display a success message)
						alert('Checkout successful!');
						window.location.href = '/Order/Confirmation';  // Redirect to a confirmation page or any other page you want
					},
					error: function (xhr, status, error) {
						// Handle error (e.g., display an error message)
						alert('An error occurred during checkout. Please try again.');
					}
				});
			});
		});
	</script>


	<!--API địa chỉ-->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" referrerpolicy="no-referrer"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"></script>
	<script>
		const host = "https://provinces.open-api.vn/api/";
		var callAPI = (api) => {
			return axios.get(api)
				.then((response) => {
					renderData(response.data, "city");
				});
		}
		callAPI('https://provinces.open-api.vn/api/?depth=1');
		var callApiDistrict = (api) => {
			return axios.get(api)
				.then((response) => {
					renderData(response.data.districts, "district");
				});
		}
		var callApiWard = (api) => {
			return axios.get(api)
				.then((response) => {
					renderData(response.data.wards, "ward");
				});
		}

		var renderData = (array, select) => {
			let row = ' <option disable value="">Chọn</option>';
			array.forEach(element => {
				row += `<option data-id="${element.code}" value="${element.name}">${element.name}</option>`
			});
			document.querySelector("#" + select).innerHTML = row
		}

		$("#city").change(() => {
			callApiDistrict(host + "p/" + $("#city").find(':selected').data('id') + "?depth=2");
			printResult();
		});
		$("#district").change(() => {
			callApiWard(host + "d/" + $("#district").find(':selected').data('id') + "?depth=2");
			printResult();
		});
		$("#ward").change(() => {
			printResult();
		})

		var printResult = () => {
			if ($("#district").find(':selected').data('id') != "" && $("#city").find(':selected').data('id') != "" &&
				$("#ward").find(':selected').data('id') != "") {
				let result = $("#city option:selected").text() +
					" | " + $("#district option:selected").text() + " | " +
					$("#ward option:selected").text();
				$("#result").text(result)
			}

		}
	</script>
}