@model IEnumerable<Data.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "_LayoutAdmin";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">Danh sách sản phẩm</h1>
        <a asp-action="Create" class="btn btn-success">+ Tạo sản phẩm mới</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Tên</th>
                <th scope="col">Giá</th>
                <th scope="col">Mô tả</th>
                <th scope="col">Thương hiệu</th>
                <th scope="col">Chất liệu</th>
                <th scope="col">Giảm giá</th>
                <th scope="col">Kích cỡ</th>
                <th scope="col" class="text-center">Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.Brand.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Material.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Promotion.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Size.Width)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Chi tiết</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">Không có sản phẩm nào.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
